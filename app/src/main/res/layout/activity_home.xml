<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mf_bg_screen">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:background="@drawable/mf_bg_screen">

        <!-- Toàn bộ nội dung -->
        <LinearLayout
            android:id="@+id/contentRoot"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mf_screen_padding">

            <!-- 1️⃣ HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mf_toolbar_height"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu_24"
                    app:tint="@color/mf_text_primary" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="MUSIC FLOW"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:letterSpacing="0.08"
                    android:textColor="@color/mf_text_primary"/>

                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search_24"
                    app:tint="@color/mf_text_primary" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDiscover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover Music"
                android:textColor="@color/mf_text_primary"
                android:textSize="@dimen/mf_section_title"
                android:textStyle="bold"
                android:paddingTop="6dp"/>

            <!-- Banner slider -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mf_banner_height"
                android:layout_marginTop="12dp"
                android:background="@drawable/mf_card_round">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:clipChildren="false"/>

                <!-- Indicator -->
                <LinearLayout
                    android:id="@+id/indicatorContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"/>

                <!-- Play ở giữa -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabPlay"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    app:backgroundTint="@color/mf_pink"
                    app:tint="@color/mf_text_primary"
                    app:srcCompat="@drawable/ic_play_16"
                    android:contentDescription="Play"/>
            </FrameLayout>

            <!-- 3️⃣ NEW ALBUMS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="New Albums"
                    android:textColor="@color/mf_text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/mf_section_title"/>

                <TextView
                    android:id="@+id/tvSeeAllAlbums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All >"
                    android:textColor="@color/mf_pink"
                    android:textSize="12sp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAlbums"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mf_album_block_h"
                android:layout_marginTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:orientation="horizontal"
                android:nestedScrollingEnabled="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Popular"
                    android:textColor="@color/mf_text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/mf_section_title"/>

                <TextView
                    android:id="@+id/tvSeeAllPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All >"
                    android:textColor="@color/mf_pink"
                    android:textSize="12sp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPopular"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
