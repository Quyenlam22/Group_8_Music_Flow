<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mf_bg_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/mf_screen_padding"
        android:paddingBottom="56dp">

        <!-- Header: ACCOUNT + search -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mf_toolbar_height"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ACCOUNT"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/mf_text_primary"/>

        </LinearLayout>

        <!-- Profile block -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/artist1"
                android:scaleType="centerCrop"
                android:background="@drawable/mf_card_round"
                android:clipToOutline="true"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tv_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyen Van A"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/mf_text_primary"/>

                <TextView
                    android:id="@+id/tv_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,234 followers"
                    android:textSize="14sp"
                    android:textColor="@color/mf_text_primary"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang theo dõi 120 người"
                    android:textSize="14sp"
                    android:textColor="@color/mf_text_primary"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Only one button: Edit -->
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="26dp"
            android:text="Chỉnh sửa"
            android:textStyle="bold"/>

        <!-- Logout button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Đăng xuất"
            android:layout_marginTop="18dp"/>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/mf_bg_screen"
        app:menu="@menu/menu_bottom_nav_main"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/mf_text_primary"
        app:itemTextColor="@color/mf_text_primary"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
