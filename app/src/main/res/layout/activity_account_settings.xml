<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:background="@drawable/mf_bg_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/mf_screen_padding">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_account"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/mf_text_primary"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Tên -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acc_name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/mf_text_primary"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/mf_card_round"
            android:paddingHorizontal="12dp"
            android:inputType="textPersonName"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/mf_text_primary"/>

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acc_email"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/mf_text_primary"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/mf_card_round"
            android:paddingHorizontal="12dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/mf_text_primary"/>

        <!-- Số điện thoại -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acc_phone"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/mf_text_primary"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/mf_card_round"
            android:paddingHorizontal="12dp"
            android:inputType="phone"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/mf_text_primary"/>

        <!-- Mật khẩu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acc_password"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/mf_text_primary"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mf_card_round"
                android:paddingHorizontal="12dp"
                android:inputType="textPassword"
                android:textColor="@color/mf_text_primary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ngày sinh -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acc_dob"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/mf_text_primary"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_calendar_24"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mf_card_round"
                android:paddingHorizontal="12dp"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@color/mf_text_primary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="@string/btn_save"
                android:enabled="false"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="@string/btn_cancel"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
